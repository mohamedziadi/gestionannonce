{% extends "::base.html.twig" %}
{% block content %}

<div class="container">
    <div class="row">
      <div class="col-md-6">
         <form method="post" {{ form_enctype(form) }}>
             <legend>Ajout d'annonces</legend>
             <div class="form-group">
                 <label for="titre"> {{ form_label(form.titre)}}
                 </label>
                 {{ form_widget(form.titre, {'attr':{'class':'form-control','placeholder' :'Titre de annonce'}}) }}
             </div>
             <div class="form-group">
                 <label for="date"> {{ form_label(form.date)}}
                 </label>
                 {{ form_widget(form.date, {'attr':{'class':'form-control'}}) }}
             </div>
              <div class="form-group">
                 <label for="categories"> {{ form_label(form.Categories)}}
                 </label>
                 
                 {{ form_widget(form.Categories, {'attr':{'class':'form-control' }}) }}
              </div>
              <div class="form-group">
                 <label for="contenu"> {{ form_label(form.contenu)}}
                 </label>
                 {{ form_widget(form.contenu, {'attr':{'class':'form-control','placeholder' :'contenu de annonce'}}) }}
             </div>
             {{ form_widget(form.envoyer, {'attr' : {'class':'btn btn-danger' }}) }}
             {{ form_rest(form) }}
         </form>
             </div>
         <div class="col-md-6">
             {% include 'annonceBundle::navigation.html.twig' %}
         </div>
    </div></div>
{% endblock %}

